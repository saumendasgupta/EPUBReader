<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/BookViewPage" 
	 android:layout_height="fill_parent" 
	 android:layout_width="fill_parent" android:background="@drawable/bg">
	 
 <RelativeLayout android:layout_alignParentTop="true"
		android:id="@+id/header"
		android:background="@drawable/headerbar" 
		android:layout_width="fill_parent" 
		android:layout_height="40dip">
		<ImageView android:id="@+id/headerhomeimage" 
		android:background="@drawable/headerebookicon" 
		android:layout_height="22dip" 
		android:layout_width="22dip" 
		android:layout_marginLeft="12dip" 
		android:layout_marginTop="10dip">
		</ImageView>
		<TextView android:layout_width="wrap_content" 
		android:text="E-Book" 
		android:id="@+id/headertext" 
		android:layout_height="30dip" 
		android:layout_marginLeft="38dip" 
		android:layout_marginTop="10dip" android:textStyle="bold"
		android:textColor="#ffffff">
		</TextView>
		<ImageView android:background="@drawable/activewindowicon"
			android:clickable="true" 
			android:id="@+id/activewindow"
			android:layout_height="18dip" 
			android:layout_width="68dip" 
			android:layout_marginLeft="210dip" 
			android:layout_marginTop="24dip">
		</ImageView>
		

<ImageView android:layout_height="22dip" 
	android:layout_width="24dip" 
	android:layout_marginLeft="420dip" 
	android:layout_marginTop="10dip" 
	android:background="@drawable/headerwifiicon" 
	android:id="@+id/headerwifiImage">
</ImageView>
<ImageView android:layout_width="36dip" 
	android:layout_height="22dip" 
	android:layout_marginLeft="460dip" 
	android:layout_marginTop="10dip" 
	android:background="@drawable/headerbatteryicon" 
	android:id="@+id/batteryIconImage">
</ImageView>
		
	
<TextView android:layout_width="wrap_content" 
android:layout_height="30dip" 
android:text="06:30" 
android:layout_marginLeft="335dip" 
android:id="@+id/Time" 
android:layout_marginTop="10dip" android:textStyle="bold" android:textColor="#ffffff">
</TextView>

</RelativeLayout>
	
	
	<RelativeLayout android:id="@+id/placeholder" 
		android:layout_below="@+id/header" android:layout_height="47dip" 
		android:background="@drawable/headericonsstripbg" android:layout_width="fill_parent">
		<GridView xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/placehold" 
			android:layout_width="fill_parent"
			android:stretchMode="columnWidth" 
			android:gravity="center"
			android:layout_below="@+id/placeholder" 
			android:layout_height="fill_parent"
			android:scrollbars="none"
			android:numColumns="8" android:columnWidth="33dip"></GridView>

	</RelativeLayout>
	<AbsoluteLayout android:id="@+id/LayoutofZoom" 
	android:layout_below="@+id/placeholder" 
	android:layout_width="fill_parent" 
	android:layout_height="48dip">
	
	<ImageView android:id="@+id/Zoom" 
	android:layout_height="33dip" 
	android:layout_width="33dip" 
	android:background="@drawable/zoomicon" android:layout_x="398dip" android:layout_y="15dip">
	</ImageView>
	<ImageView android:id="@+id/fullscreen" 
	android:layout_height="33dip" 
	android:layout_width="33dip" 
	android:background="@drawable/fullscreenicon" android:layout_x="444dip" android:layout_y="17dip">
	</ImageView>
	</AbsoluteLayout>
	<RelativeLayout android:layout_below="@+id/placeholder" 
	android:layout_height="785dip" 
	android:id="@+id/pageback" 
	android:layout_width="20dip">
	</RelativeLayout>
	
	
	<RelativeLayout 
    android:orientation="vertical"
    android:id="@+id/relativelayout01" 
    android:layout_below="@+id/LayoutofZoom" 
    android:layout_width="700dip" 
    android:layout_marginLeft="20dip" android:layout_height="785dip">

	
	<LinearLayout android:id="@+id/LinearLayout01" 
	android:orientation="vertical"  
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	
	</LinearLayout>
	</RelativeLayout>
	
	
	<RelativeLayout android:layout_below="@+id/placeholder" 
	android:layout_height="785dip" 
	android:id="@+id/pagenext" 
	android:layout_alignParentRight="true" 
	android:layout_width="40dip">
	</RelativeLayout>
	
	<RelativeLayout android:id="@+id/BookViewFooter" 
android:background="@drawable/footerstripewithcabinet" 
android:layout_height="42dip" 
android:layout_width="fill_parent" 
android:layout_alignParentBottom="true">
<TextView android:layout_width="57dip" 
android:layout_height="23dip" 
android:layout_marginLeft="28dip" 
android:id="@+id/pagenodisplay" 
android:layout_marginTop="12dip"
android:textColor="#ffffff"
android:background="@drawable/pagenumberbg">
	</TextView>
	<ImageView android:id="@+id/toc" 
	android:layout_width="30dip" 
	android:layout_marginLeft="110dip" 
	android:background="@drawable/footertableofcontentsicon" 
	android:layout_height="26dip" android:layout_marginTop="9dip">
	</ImageView>
	<ImageView android:layout_height="25dip" 
	android:layout_width="25dip" 
	android:layout_marginLeft="410dip" 
	android:id="@+id/bookviewpageannotate" 
	android:layout_marginTop="10dip"
	android:background="@drawable/footerannotatedicon" 
	>
	</ImageView>
	<ImageView android:layout_height="25dip" 
	android:layout_width="25dip" 
	android:layout_marginLeft="452dip" 
	android:id="@+id/bookviewbookmark" 
	android:layout_marginTop="10dip"
	android:background="@drawable/footerbookmarkedicon" >
	</ImageView>
	</RelativeLayout>
</RelativeLayout>
