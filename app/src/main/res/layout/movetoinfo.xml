<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:id="@+id/info_main" android:layout_height="fill_parent">


	<RelativeLayout android:layout_width="fill_parent"
		android:id="@+id/info_dialog" android:background="@drawable/infobg"
		android:layout_height="179dip" android:layout_marginTop="301dip">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/info_head"
			 android:layout_marginLeft="30dip"
			android:layout_marginTop="15dip" android:textStyle="bold"></TextView>
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/infomessage"
			android:textColor="#000000"
			android:text="-" android:layout_centerVertical="true"
			android:layout_marginLeft="40dip" android:layout_below="@id/info_head"
			android:layout_marginTop="40dip"></TextView>
	</RelativeLayout>
</LinearLayout>