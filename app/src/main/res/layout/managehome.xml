<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/managehome"
	android:layout_gravity="bottom" 
	android:layout_height="545dip" 
	android:background="@drawable/managehomeitembgwithoutheader">
	<RelativeLayout android:id="@+id/managehomeheaderbar" 
	android:layout_height="43dip" 
	android:layout_width="fill_parent" 
	android:background="@drawable/managehomeheaderbar">
	<ImageView android:id="@+id/managehomeicon" 
	android:background="@drawable/headerhomeicon" 
	android:layout_height="23dip" 
	android:layout_width="27dip" 
	android:layout_marginLeft="9dip" 
	android:layout_marginTop="9dip">
	</ImageView>
	<TextView android:layout_width="wrap_content" 
	android:layout_height="20dip" 
	android:id="@+id/settingtext" 
	android:text="Manage Home" 
	android:layout_marginTop="10dip" 
	android:layout_marginLeft="45dip"
	android:textColor="#ffffff"
	android:textSize="15dip">
	</TextView>
	<ImageView android:layout_height="25dip" 
android:layout_width="25dip" 
android:layout_marginLeft="470dip" 
android:layout_marginTop="8dip"
android:id="@+id/homesettingheadericon2" 
android:background="@drawable/closebuttfullscreen">
</ImageView>
</RelativeLayout>
<RelativeLayout android:id="@+id/upperhalf" 
		android:layout_below="@+id/managehomeheaderbar"
		 android:layout_height="380dip" android:layout_width="fill_parent" 
		 >
		 <GridView android:id="@+id/gridtheme" 
		android:layout_width="100dip" 
			android:numColumns="1"
			android:stretchMode="columnWidth" 
			android:columnWidth="96dip" 
			android:horizontalSpacing="14dip" 
			android:verticalSpacing="15dip"
			android:layout_height="wrap_content"
			android:layout_marginLeft="32dip"
			android:layout_marginTop="15dip">
		</GridView>
		 <ImageView android:id="@+id/divider"
		android:layout_below="@+id/upperhalf" 
		android:layout_height="700dip" 
		android:layout_width="4dip"
		android:layout_marginLeft="150dip" 
		android:background="@drawable/dividerline">
		</ImageView>
		<ImageView android:id="@+id/selectedtheme" 
		android:layout_height="193dip" 
		android:layout_width="145dip" 
		android:layout_marginTop="30dip"
		android:layout_marginLeft="220dip" 
		android:background="@drawable/mylibraryhighlightedbigger">
		</ImageView>
	<ImageView android:id="@+id/backgroundColor1" 
	android:layout_marginTop="300dip"
	android:layout_marginLeft="145dip"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:background="@drawable/backgroundtheme1">
	</ImageView>
<ImageView android:id="@+id/backgroundColor2" 
	android:layout_marginTop="300dip"
	android:layout_marginLeft="220dip"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:background="@drawable/backgroundtheme2">
</ImageView>
<ImageView android:id="@+id/backgroundColor3" 
	android:layout_marginTop="300dip"
	android:layout_marginLeft="290dip"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:background="@drawable/backgroundtheme3">
	</ImageView>
	<ImageView android:id="@+id/ApplyBackground" 
	android:layout_marginTop="300dip"
	android:layout_marginLeft="360dip"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:background="@drawable/applybutt">
	</ImageView>
	<ImageView android:layout_below="@id/ApplyBackground" 
	android:id="@+id/horizentallineaftergotolib" 
	android:layout_height="4dip" 
	android:layout_width="462dip" 
	android:layout_marginLeft="9dip" 
	android:layout_marginTop="20dip" 
	android:background="@drawable/dividerline">
	</ImageView>
</RelativeLayout>
	
	<RelativeLayout android:layout_below="@id/upperhalf"
		android:layout_width="fill_parent" 
		android:id="@+id/bottomhalf" android:layout_height="136dip">
		<Button android:id="@+id/BackSettings" 
	android:layout_below="@id/bottomhalf"
		android:layout_alignParentRight="true"
		android:layout_height="62dip" 
		android:layout_width="fill_parent" 
		android:text="Manage Menus" 
		android:background="@drawable/itemstabnonselected"
		android:textColor="#ffffff">
		</Button>

<ImageView android:id="@+id/managehomesettingImage" 
android:layout_height="24dip" 
android:layout_width="24dip" 
android:layout_marginLeft="365dip" 
android:layout_below="@+id/BackSettings" 
android:layout_marginTop="12dip" 
android:background="@drawable/settingsicon">
</ImageView>
<TextView android:layout_width="wrap_content" 
	android:layout_height="20dip" 
	android:layout_below="@+id/BackSettings"
	android:id="@+id/settingtext" 
	android:text="Settings" 
	android:layout_marginTop="12dip" 
	android:layout_marginLeft="400dip"
	android:textColor="#ffffff">
	</TextView>
	</RelativeLayout>
	
</RelativeLayout>