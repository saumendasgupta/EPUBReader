<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="760dip"
	android:layout_gravity="bottom">

	<ImageView android:layout_width="fill_parent" android:id="@+id/ImageViewSaveAs"
		android:layout_height="43dip" android:layout_marginTop="320dip"
		android:background="@drawable/dictionarytopbar">
	</ImageView>
	
	<TextView android:id="@+id/saveastext" android:text="Save As"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:textColor="#ffffff"></TextView>
	<ImageView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:layout_marginLeft="464dip"
		android:layout_marginTop="330dip" android:id="@+id/closeSaveAs"
		android:background="@drawable/closebuttfullscreen">
	</ImageView>
	<RelativeLayout android:id="@+id/SaveAsPlace"
		android:background="@drawable/dictionarybg" android:layout_below="@id/ImageViewSaveAs"
		android:layout_height="397dip" android:layout_width="fill_parent"
		android:layout_alignParentBottom="true">
		<EditText android:id="@+id/SaveAsEditText"
			android:layout_height="37dip" android:layout_width="433dip"
			
			android:layout_marginTop="5dip" android:layout_marginLeft="15dip">
		</EditText>

		<ImageView android:id="@+id/clicktosaveas"
			android:layout_height="30dip" android:layout_width="30dip"
			android:layout_marginTop="5dip" android:background="@drawable/dictionarygoicon"
			android:layout_toRightOf="@id/SaveAsEditText" android:paddingLeft="10dip"></ImageView>
	</RelativeLayout>



</RelativeLayout>