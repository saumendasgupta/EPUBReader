<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:gravity="bottom" 
    android:layout_gravity="bottom" android:layout_height="400dip">
 
<RelativeLayout android:id="@+id/BackGround" 
android:background="@drawable/annotationbg" 
 android:layout_height="298dip"
  android:layout_width="fill_parent"
   android:layout_alignParentBottom="true">
   
   <RelativeLayout android:id="@+id/SaveAsPlace"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="460dip"
  android:layout_height="220dip"
  android:background="@drawable/whiteareaannotation" 
  android:layout_marginTop="20dip" android:layout_marginLeft="5dip"/>


<ImageView android:id="@+id/closeAnnotate" 
	android:layout_toRightOf="@id/SaveAsPlace"   
	android:layout_width="wrap_content"
	android:background="@drawable/closebuttfullscreen"
	 android:layout_height="wrap_content"
	 android:layout_marginTop="20dip" android:layout_marginLeft="10dip"
	 >
	 </ImageView>
	<TextView  
android:id="@+id/KeyPadText" 
android:layout_height="37dip" 
android:layout_width="460dip" 
android:textStyle="bold"
android:background="@drawable/keypadwrittentakingplace" 
android:layout_marginTop="5dip" 
android:layout_below="@id/SaveAsPlace"
android:drawableLeft="@drawable/keyboardicon" android:layout_marginLeft="5dip">

</TextView>



</RelativeLayout>


</RelativeLayout>