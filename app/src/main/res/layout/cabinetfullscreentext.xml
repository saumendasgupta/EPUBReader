<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout android:id="@+id/cabinetfulltextLayout" 
	android:layout_width="fill_parent" 
	android:layout_height="270dip" 
	android:background="@drawable/infobg"
	android:layout_marginTop="270dip" android:scrollbars="vertical">
	
	<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/info_head"
			android:layout_marginLeft="30dip"
			android:layout_marginTop="15dip" 
			android:textStyle="bold" 
			android:text="Cabinet Item"
			android:textColor="#ffffff">
	</TextView>
	<ImageView android:id="@+id/CloseText" 
			 android:layout_width="wrap_content" 
			 android:layout_height="wrap_content"
			 android:layout_marginTop="10dip"
			 android:layout_marginLeft="440dip"
			 android:background="@drawable/closebuttfullscreen">
	 </ImageView>
	 
	 <ScrollView 
	 android:layout_height="200dip" 
	 android:layout_width="465dip" 
	 android:id="@+id/ScrollView01" 
	 android:layout_marginTop="65dip" 
	 android:layout_marginLeft="6dip"
	 android:background="@drawable/textwhitearea"
	 >
	 <TextView android:id="@+id/cabinetfulltext" 
	 android:layout_width="500dip" 
	 android:layout_height="200dip" 
	 android:background="@drawable/textwhitearea" 
	 android:layout_marginTop="65dip" 
	 android:layout_marginLeft="12dip" 
	 android:textStyle="bold" 
	 android:textColor="#000000" 
	 android:scrollbars="vertical">
	
	</TextView>
	</ScrollView>

</RelativeLayout>
</RelativeLayout>
